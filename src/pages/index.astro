import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import { YouTube } from 'astro-embed';
import profileImage from '../images/andreas-2.jpeg';

const pageTitle = 'Andreas Johansson';

const uxDesignPosts = await getCollection('ux');
const aiPosts = await getCollection('ai');

// Define main categories with descriptions and icons
const categories = [
  {
    id: 'ai',
    title: 'AI',
    description: 'Exploring the latest in AI - tools, techniques and insights.',
    icon: 'ðŸ¤–',
    gradient: 'from-[#FF6B6B] to-[#4ECDC4]',
    length: aiPosts.length,
  },
  {
    id: 'ux',
    title: 'UX',
    description:
      'Insights and best practices in user experience design - from research to implementation.',
    icon: 'ðŸŽ¨',
    gradient: 'from-[#FF6B6B] to-[#4ECDC4]',
    length: uxDesignPosts.length,
  },

  /*  {
    id: 'music-production',
    title: 'Music Production',
    description: 'Tips, techniques, and stories from my journey in electronic music production.',
    icon: 'ðŸŽ¹',
    gradient: 'from-[#A8E6CF] to-[#3D84A8]',
    length: musicProductionPosts.length,
  },
  {
    id: 'tech',
    title: 'Technology',
    description: 'Exploring the latest in web development, AI, and creative technology.',
    icon: 'ðŸ’»',
    gradient: 'from-[#6C63FF] to-[#3F3D56]',
    length: techPosts.length,
  },
  {
    id: 'creativity',
    title: 'Digital Creativity',
    description: 'Digital art, design tools, and creative workflows.',
    icon: 'âœ¨',
    gradient: 'from-[#FFD93D] to-[#FF6B6B]',
    length: creativityPosts.length,
  } */
];
---

<BaseLayout pageTitle={pageTitle}>
  {/* Hero Section */}
  <section class="py-12 md:py-24">
    <h1 class="text-4xl md:text-6xl font-bold tracking-tight">
      UX Designer crafting intuitive digital experiences
    </h1>
    <div class="flex items-center mt-4 text-xl text-muted-foreground">
      <Image
        src={profileImage}
        alt="Andreas' Avatar"
        class="w-20 h-20 rounded-full mr-4 transition-all duration-[2000ms] hover:grayscale transform perspective-1000 hover:animate-[coin-flip_2s_ease-in-out]"
      />
      <p>
        Hi, I'm Andreas. I specialize in user-centered design and creating
        seamless interactions.
      </p>
    </div>
    <!--
    <div class="mt-6 flex gap-4">
      <Button variant="default" size="lg" href="/portfolio">View My Work</Button>
      <Button variant="outline" size="lg" href="https://www.linkedin.com/in/andreasjohanssonux/" target="_blank">
        Contact Me 
      </Button>
    </div>
    -->
  </section>
  <section class="py-12">
    <section class="mb-16">
      <h2
        class="text-4xl font-bold tracking-tight mb-4 bg-clip-text text-transparent bg-gradient-to-r from-primary to-primary/70"
      >
        Categories
      </h2>
      <p class="text-xl text-muted-foreground max-w-3xl">
        Explore articles about UX design, music production, technology, and
        creative pursuits.
      </p>
    </section>

    <div class="grid gap-6 md:grid-cols-2">
      {
        categories.map((category) => (
          <a
            href={`/${category.id}`}
            class="category-card group relative overflow-hidden rounded-lg border bg-card p-6 transition-colors hover:border-primary"
          >
            {/* animated gradient glow */}
            <div
              class={`category-glow absolute inset-px rounded-[inherit] bg-gradient-to-r ${category.gradient}`}
            />

            {/* content */}
            <div class="relative space-y-4">
              <span class="text-4xl">{category.icon}</span>
              <div class="space-y-2">
                <div class="flex items-center justify-between">
                  <h2 class="text-2xl font-semibold tracking-tight transition-colors group-hover:text-primary">
                    {category.title}
                  </h2>
                  <span class="text-sm text-muted-foreground transition-colors group-hover:text-primary/80">
                    {category.length} articles
                  </span>
                </div>
                <p class="text-muted-foreground transition-colors group-hover:text-foreground">
                  {category.description}
                </p>
              </div>
            </div>
          </a>
        ))
      }
    </div>
  </section>

  <!--
  <section class="py-12">
    <h2 class="text-3xl font-semibold mb-8">Featured Projects</h2>
    <PortfolioList />
  </section>
-->

  <section class="py-16">
    <div class="max-w-5xl mx-auto">
      <!-- Heading -->
      <div class="text-center mb-10">
        <h2 class="text-3xl font-semibold tracking-tight">My design process</h2>
        <p class="mt-3 text-muted-foreground max-w-2xl mx-auto">
          How I typically move from understanding the problem to tested,
          developer-ready designs.
        </p>
      </div>

      <!-- Process card -->
      <div class="relative rounded-2xl border bg-card/60 px-6 py-10 md:px-10">
        <!-- Connecting line (desktop) -->
        <div
          class="hidden md:block absolute left-12 right-12 top-16 h-px bg-border/70"
          aria-hidden="true"
        >
        </div>

        <ol class="relative grid gap-10 md:grid-cols-4">
          <!-- Step 1 -->
          <li class="flex flex-col items-center text-center group">
            <span
              class="flex h-10 w-10 items-center justify-center rounded-full
                   border border-border bg-background text-sm font-semibold
                   transition-transform transition-shadow duration-200
                   group-hover:-translate-y-0.5
                   group-hover:shadow-md group-hover:shadow-sky-500/30
                   group-hover:border-sky-500"
            >
              1
            </span>
            <h3 class="mt-4 text-base font-semibold">Research</h3>
            <p class="mt-2 text-sm text-muted-foreground">
              Understand users, business goals and constraints through
              interviews, existing flows and analytics.
            </p>
          </li>

          <!-- Step 2 -->
          <li class="flex flex-col items-center text-center group">
            <span
              class="flex h-10 w-10 items-center justify-center rounded-full
                   border border-border bg-background text-sm font-semibold
                   transition-transform transition-shadow duration-200
                   group-hover:-translate-y-0.5
                   group-hover:shadow-md group-hover:shadow-sky-500/30
                   group-hover:border-sky-500"
            >
              2
            </span>
            <h3 class="mt-4 text-base font-semibold">Ideation</h3>
            <p class="mt-2 text-sm text-muted-foreground">
              Map flows, sketch alternatives and explore concepts together with
              product and engineering.
            </p>
          </li>

          <!-- Step 3 -->
          <li class="flex flex-col items-center text-center group">
            <span
              class="flex h-10 w-10 items-center justify-center rounded-full
                   border border-border bg-background text-sm font-semibold
                   transition-transform transition-shadow duration-200
                   group-hover:-translate-y-0.5
                   group-hover:shadow-md group-hover:shadow-sky-500/30
                   group-hover:border-sky-500"
            >
              3
            </span>
            <h3 class="mt-4 text-base font-semibold">Prototyping</h3>
            <p class="mt-2 text-sm text-muted-foreground">
              Create clickable prototypes and detailed UI to validate flows and
              align with stakeholders.
            </p>
          </li>

          <!-- Step 4 -->
          <li class="flex flex-col items-center text-center group">
            <span
              class="flex h-10 w-10 items-center justify-center rounded-full
                   border border-border bg-background text-sm font-semibold
                   transition-transform transition-shadow duration-200
                   group-hover:-translate-y-0.5
                   group-hover:shadow-md group-hover:shadow-sky-500/30
                   group-hover:border-sky-500"
            >
              4
            </span>
            <h3 class="mt-4 text-base font-semibold">Testing & dev support</h3>
            <p class="mt-2 text-sm text-muted-foreground">
              Run usability tests, iterate on findings and prepare specs and
              assets for implementation.
            </p>
          </li>
        </ol>
      </div>
    </div>
  </section>
</BaseLayout>
